---
import Layout from "../layouts/Layout.astro";
import Home from "../components/Sections/Home.astro";
import AboutMe from "../components/Sections/AboutMe.astro";
import Proyects from "../components/Sections/Proyects.astro";
import MyAbilities from "../components/Sections/MyAbilities.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Portafolio">
	<Home />
	<AboutMe />
	<Proyects />
	<MyAbilities />
	<Footer />
</Layout>

<style is:global>
	
	section {
		view-timeline-name: --effe;
		view-timeline-axis: block;

		animation-timeline: --effe;
		animation-name: effectSection;
		animation-range: entry 20% cover 50%;
		animation-fill-mode: both;
	}


	@keyframes effectSection {
		from {
			opacity: 0;
			scale: 77%;
			line-height: 3;
		}

		to {
			opacity: 1;
			scale: 100%;
			line-height: 1.5;
		}
	}

</style>
