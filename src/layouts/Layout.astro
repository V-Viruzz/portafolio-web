---
import Header from "../components/Header.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body id="page">
		<main>
			<Header />
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		color-scheme: dark;
		--color-text-1: #3ea9f0;
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #0d0d0d;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	.titleEffect {
		-webkit-text-stroke-width: 4px;
		-webkit-text-stroke-color: #ffffff1c;
	}

	.Card {
		background: linear-gradient(112deg, #282828, #121212);
	}

	.CardBorder {
		background: linear-gradient(112deg, #1f1f1f, #121212);
	}

	.Ball {
		animation: effect-flash 3.30s ease-out alternate-reverse infinite;

		/* filter: blur(39px); */
	}
	.Ball::after {
		animation: effect-flash-2 3.30s ease-out alternate-reverse infinite;
		position: absolute;
		content: "";
		width: 100%;
		height: 100%;
		border-radius: 50px;
		top: 0;
		left: 0;
		background-color: #3ea9f060;
	}

	@keyframes effect-flash {
		from {
		}
		to {
			scale: 1.5;
		}
	}
	@keyframes effect-flash-2 {
		from {
		}
		to {
			scale: 2;
		}
	}
</style>
