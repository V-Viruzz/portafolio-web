---
import Header from "../components/Header.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body id="page">
		<main>
			<Header />
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		color-scheme: dark;
		color: rgba(255, 255, 255, 0.87);
		background-color: #0d0d0d;
		--color-text-1: #3ea9f0;
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	html {
		font-family: system-ui, sans-serif;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	.titleEffect {
		-webkit-text-stroke-width: 4px;
		-webkit-text-stroke-color: #ffffff1c;
	}

	.Card {
		background: linear-gradient(112deg, #282828, #121212);
	}

	.CardBorder {
		background: linear-gradient(112deg, #1f1f1f, #121212);
	}

	.TransitionImage {
		animation: cardTransitionImage 0.5s ease-out;
	}
	.TransitionOpacity {
		animation: cardTransitionText 0.5s ease-out;
	}

	@keyframes cardTransitionImage {
		0% {
			opacity: 0;
			transform: translateX(5.5rem);
		}
		50% {
			opacity: 0.5;
			transform: translateX(0);
		}
		100% {
			opacity: 1;
		}
	}
	@keyframes cardTransitionText {
		0% {
			opacity: 0;
		}
		50% {
			opacity: 0.5;
		}
		100% {
			opacity: 1;
		}
	}

	@media (prefers-color-scheme: light) {
		:root {
			color-scheme: light;
			color: #000000;
			background-color: #ffffff;
		}

		.titleEffect {
			-webkit-text-stroke-width: 0px;
			-webkit-text-stroke-color: #000000;
		}

		.Card {
			background: linear-gradient(112deg, #f1f1f1, #f1f1f1);
		}

		.CardBorder {
			background: linear-gradient(112deg, #e6e6e6, #e6e6e6);
		}
	}

	@media screen and (max-width: 600px) {
		.TransitionImage {
			animation: cardTransitionText 0.5s ease-out;
		}
	}
</style>
